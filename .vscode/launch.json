    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
        },
        {
            "name": "Python: OAuth Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/mcp_oauth/testing.py",
            "args": [
                "--service",
                "oauth"
            ]
        },
        {
            "name": "Python: MCP Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/mcp_oauth/testing.py",
            "args": [
                "--service",
                "server"
            ]
        },
        {
            "name": "Python: Client",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/mcp_oauth/testing.py",
            "args": [
                "--service",
                "client"
            ]
        },
        {
            "name": "Python: Prod OAuth Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tests/testing.py",
            "args": [
                "--service",
                "oauth"
            ]
        },
        {
            "name": "Python: Prod MCP Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tests/testing.py",
            "args": [
                "--service",
                "server"
            ]
        },
        {
            "name": "Python: Prod Client",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tests/testing.py",
            "args": [
                "--service",
                "client"
            ]
        }
    ]
}